<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="False">
            <TextBlock DockPanel.Dock="Top" Background="Yellow" Padding="10"/>
            <TextBlock DockPanel.Dock="Left" Background="SaddleBrown" Padding="30"/>
            <TextBlock DockPanel.Dock="Right" Background="Red" Padding="40"/>
            <TextBlock DockPanel.Dock="Bottom" Background="WhiteSmoke" Padding="40"/>
        </DockPanel>

    </Grid>
</Window>
